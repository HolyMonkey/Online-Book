@model List<Chapter>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contents</title>
</head>
<body>
    <div align="center">
        <h1>Contents</h1>
        @foreach(var chapter in Model)
         {
            <h3><a href="~/Page/@chapter.Pages[0].Number">@chapter.Name</a> - @chapter.Pages[0].Number page</h3>
         }
    </div>
</body>
</html>
